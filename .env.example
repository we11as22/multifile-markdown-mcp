# ===================================
# MCP Server Configuration
# ===================================
MCP_SERVER_NAME=agent-memory
LOG_LEVEL=INFO

# ===================================
# Storage Configuration
# ===================================
MEMORY_FILES_PATH=./memory_files
MAIN_FILE_NAME=main.md

# ===================================
# PostgreSQL Database
# ===================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agent_memory
POSTGRES_USER=memory_user
POSTGRES_PASSWORD=change_me_in_production

# ===================================
# Embedding Provider Selection
# ===================================
# Options: openai, cohere, ollama, huggingface, litellm
EMBEDDING_PROVIDER=openai
EMBEDDING_DIMENSION=1536

# ===================================
# OpenAI Configuration
# ===================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_EMBEDDING_MODEL=text-embedding-3-large  # 3072 dimensions

# ===================================
# Cohere Configuration
# ===================================
COHERE_API_KEY=your-cohere-api-key-here
COHERE_EMBEDDING_MODEL=embed-english-v3.0
# COHERE_INPUT_TYPE=search_document  # or search_query, classification

# ===================================
# Ollama Configuration
# ===================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
# Other options: mxbai-embed-large, snowflake-arctic-embed

# ===================================
# HuggingFace Configuration
# ===================================
HUGGINGFACE_API_KEY=your-hf-token-here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2
# HUGGINGFACE_USE_LOCAL=true  # Set to use local model instead of API
# HUGGINGFACE_DEVICE=cpu  # or cuda

# ===================================
# LiteLLM Configuration
# ===================================
LITELLM_MODEL=text-embedding-3-small
# LiteLLM supports 100+ models, examples:
# - text-embedding-3-small (OpenAI)
# - embed-english-v3.0 (Cohere)
# - voyage-2 (Voyage AI)
# - openai/text-embedding-ada-002
# Set provider-specific API keys above

# ===================================
# Search Configuration
# ===================================
CHUNK_SIZE=800
CHUNK_OVERLAP=200
SEARCH_LIMIT=20
RRF_K=60

# ===================================
# Sync Configuration
# ===================================
FILE_WATCH_ENABLED=true
SYNC_INTERVAL_SECONDS=60

# ===================================
# Advanced Settings
# ===================================
# Database connection pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# Embedding batch size
EMBEDDING_BATCH_SIZE=100

# Retry settings
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
